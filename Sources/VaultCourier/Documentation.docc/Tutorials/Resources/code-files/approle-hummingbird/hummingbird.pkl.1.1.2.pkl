module VaultAdminConfig

import "@pkl.vault/Payloads/SystemBackend/Mounts/MountConfiguration.pkl"
import "@pkl.vault/Payloads/SecretEngines/Databases/PostgreSQL/PostgresDatabaseConnection.pkl"
import "@pkl.vault/Payloads/SecretEngines/Databases/PostgreSQL/PostgresStaticRole.pkl"
import "@pkl.vault/Payloads/SecretEngines/Databases/PostgreSQL/PostgresRole.pkl"
import "@pkl.vault/Payloads/SystemBackend/Policies/VaultPolicy.pkl"
import "@pkl.vault/Payloads/SystemBackend/Auth/AuthMethodConfig.pkl"
import "@pkl.vault/Payloads/AuthMethods/AppRole/VaultAppRole.pkl"
import "@pkl.vault/Payloads/AuthMethods/AppRole/AppRoleToken.pkl"

policies: Listing<VaultPolicy>

database: DatabaseConfiguration

authMethod: AppRoleAuth

class DatabaseConfiguration {
  mount: MountConfiguration
  connection: PostgresDatabaseConnection
  staticRole: PostgresStaticRole
  dynamicRole: PostgresRole
}

class AppRoleAuth {
  config: AuthMethodConfig
  appRoles: Mapping<String, AppRole>
}

class AppRole {
  properties: VaultAppRole
  tokenConfig: AppRoleToken
}