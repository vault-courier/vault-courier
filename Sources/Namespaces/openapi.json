{
  "openapi": "3.0.3",
  "info": {
    "title": "Vault Courier System Namespaces API",
    "version": "0.2.0",
    "description": "System Mounts endpoints. Vault Courier is a Swift client for Hashicorp Vault and OpenBao",
    "license": {
      "name": "Apache License 2.0"
    }
  },
  "servers": [
    {
      "url": "{protocol}://127.0.0.1:8200/v1",
      "description": "Default server url",
      "variables": {
        "protocol": {
          "enum": [
            "http",
            "https"
          ],
          "default": "https"
        }
      }
    }
  ],
  "paths": {
    "/sys/namespaces/{path}": {
      "description": "Namespaces",
      "get": {
        "tags": [
          "namespaces"
        ],
        "summary": "Get Namespace Information",
        "description": "Returns the namespace information",
        "operationId": "read-namespace-info",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NamespaceInfoResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "namespaces"
        ],
        "summary": "Creates a new namespace",
        "description": "Creates a new namespace",
        "operationId": "write-namespace",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "custom_metadata": {
                    "type": "object",
                    "format": "kvpairs",
                    "description": "Custom user-provided metadata meant to describe the namespace",
                    "additionalProperties": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NamespaceInfoResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "namespaces"
        ],
        "summary": "Delete a namespace",
        "description": "Deletes namespace",
        "operationId": "delete-namespace",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "request_id": {
                      "type": "string"
                    },
                    "lease_id": {
                      "type": "string"
                    },
                    "renewable": {
                      "type": "boolean"
                    },
                    "lease_duration": {
                      "type": "integer"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "status": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "status"
                      ],
                      "nullable": true
                    },
                    "wrap_info": {
                      "type": "object"
                    },
                    "warnings": {
                      "type": "array",
                      "description": "A list of warnings, e.g. ignored parameters",
                      "items": {
                        "type": "string"
                      }
                    },
                    "auth": {
                      "type": "object"
                    },
                    "mount_type": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "request_id"
                  ]
                }
              }
            }
          }
        }
      },
      "patch": {
        "tags": [
          "namespaces"
        ],
        "summary": "Patches existing namespace",
        "description": "Patches existing namespace",
        "operationId": "patch-namespace",
        "requestBody": {
          "content": {
            "application/merge-patch+json": {
              "schema": {
                "type": "object",
                "properties": {
                  "custom_metadata": {
                    "type": "object",
                    "format": "kvpairs",
                    "description": "Custom user-provided metadata meant to describe the namespace",
                    "additionalProperties": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NamespaceInfoResponse"
                }
              }
            }
          }
        }
      },
      "parameters": [
        {
          "description": "The name of the namespace",
          "name": "path",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        {
          "$ref": "#/components/parameters/VaultTokenHeader"
        }
      ]
    }
  },
  "components": {
    "schemas": {
      "NamespaceInfoResponse": {
        "type": "object",
        "properties": {
          "request_id": {
            "type": "string"
          },
          "lease_id": {
            "type": "string"
          },
          "renewable": {
            "type": "boolean"
          },
          "lease_duration": {
            "type": "integer"
          },
          "data": {
            "type": "object",
            "properties": {
              "custom_metadata": {
                "type": "object",
                "format": "kvpairs",
                "description": "Custom user-provided metadata meant to describe the namespace",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "id": {
                "type": "string",
                "description": "namespace identity"
              },
              "locked": {
                "type": "boolean"
              },
              "path": {
                "type": "string",
                "description": "relative path with respect to parent namespace"
              },
              "tainted": {
                "type": "boolean"
              },
              "uuid": {
                "type": "string",
                "description": "unique identifier"
              }
            },
            "required": [
              "id",
              "locked",
              "path",
              "tainted",
              "uuid"
            ]
          },
          "wrap_info": {
            "type": "object"
          },
          "warnings": {
            "type": "array",
            "description": "A list of warnings, e.g. ignored parameters",
            "items": {
              "type": "string"
            }
          },
          "auth": {
            "type": "object"
          },
          "mount_type": {
            "type": "string"
          }
        },
        "required": [
          "request_id",
          "data"
        ]
      },
      "VaultErrorsResponseBody": {
        "type": "object",
        "properties": {
          "errors": {
            "type": "array",
            "description": "List of errors",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "parameters": {
      "VaultTokenHeader": {
        "description": "Vault Token required for authentication",
        "name": "X-Vault-Token",
        "in": "header",
        "schema": {
          "type": "string"
        }
      },
      "WrapTTLHeader": {
        "description": "Use the X-Vault-Wrap-TTL header with any Vault API call where you want to wrap the response.",
        "name": "X-Vault-Wrap-TTL",
        "in": "header",
        "schema": {
          "type": "string"
        }
      },
      "VaultNamespace": {
        "description": "Namespaces enable secure multi-tenancy. Each tenant (isolated environments e.g., team, organisation, or application) operates within its namespace, isolated from others",
        "name": "X-Vault-Namespace",
        "in": "header",
        "schema": {
          "type": "string"
        }
      }
    }
  }
}
